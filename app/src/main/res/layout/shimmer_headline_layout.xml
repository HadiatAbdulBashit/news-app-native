<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading_shimmer_headline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shimmer_headline"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_shimmer_healdine"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="@color/shimmer_color"
            app:cardCornerRadius="25dp"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tv_shimmer"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/shimmer_color"
            app:layout_constraintTop_toBottomOf="@id/cv_shimmer_healdine" />

        <View
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/shimmer_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_shimmer" />

        <View
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/shimmer_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_shimmer" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.facebook.shimmer.ShimmerFrameLayout>