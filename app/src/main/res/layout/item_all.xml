<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_all_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_all_news"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:contentDescription="@string/this_is_iv_all_news"
            android:scaleType="centerCrop"
            tools:src="@drawable/dumy_images" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_all_news"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_all_news"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ada kucing hitam menggunakan 'background' hitam - Fraksi PKS" />

    <ImageView
        android:id="@+id/iv_author_all_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_all_news" />

    <TextView
        android:id="@+id/tv_author_all_news"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_author_all_news"
        app:layout_constraintEnd_toStartOf="@id/iv_date_all_news"
        app:layout_constraintStart_toEndOf="@id/iv_author_all_news"
        app:layout_constraintTop_toTopOf="@id/iv_author_all_news"
        tools:text="Hadiat Abdul B" />

    <ImageView
        android:id="@+id/iv_date_all_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/baseline_calendar_month_24"
        app:layout_constraintBottom_toBottomOf="@id/tv_author_all_news"
        app:layout_constraintEnd_toStartOf="@id/tv_date_all_news"
        app:layout_constraintTop_toTopOf="@id/tv_author_all_news" />

    <TextView
        android:id="@+id/tv_date_all_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_author_all_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_author_all_news"
        tools:text="1 Jan 2025" />


</androidx.constraintlayout.widget.ConstraintLayout>